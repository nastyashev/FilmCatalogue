@model FilmCatalogue.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Додати категорію</h2>
<hr />


@using (Html.BeginForm()) 
{  
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group pb-2">
            <label class="control-label col-md-2">Назва</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pb-4">
            <label class="control-label col-md-2">Материнська категорія</label>
            <div class="col-md-10">
                @Html.DropDownList("ParentCategoryId", (SelectList)ViewBag.ParentCategoryList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ParentCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pb-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Підтвердити" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
